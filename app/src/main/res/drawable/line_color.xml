<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <size
                android:width="15dp"
                android:height="15dp" />
            <gradient
                android:endColor="@color/colorAccent"
                android:startColor="@color/colorPrimary" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#FFF" />
        </shape>
    </item>
</layer-list>